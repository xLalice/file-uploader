<%- include('layout', { title: 'Dashboard' }) %>

<div class="max-w-4xl mx-auto">
    <h2 class="text-2xl font-bold mb-6">My Folders</h2>
    
    <div class="mb-8">
        <h3 class="text-xl font-bold mb-4">Create New Folder</h3>
        <form action="/folders" method="post" class="flex items-center">
            <input type="text" name="name" required placeholder="Folder Name" class="shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mr-2">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Create Folder
            </button>
        </form>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% folders.forEach(folder => { %>
            <a href="/folders/<%= folder.id %>">
                <div class="">
                    <img src="/images/folder.png" class="cursor-pointer">
                    <div class="flex justify-between items-center">
                    <h3 class="text-lg font-bold mb-2"><%= folder.name %></h3>
                        <form action="/folders/<%= folder.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="text-red-500 hover:text-red-700"><img src="/images/delete.png" class="w-10"/></button>
                        </form>
                    </div>
                </div>
            </a>
            
        <% }) %>
    </div>
</div>