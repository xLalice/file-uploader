<%- include('layout', { title: 'File Details' }) %>

<div class="max-w-2xl mx-auto bg-white p-8 rounded shadow">
    <h2 class="text-2xl font-bold mb-6"><%= file.name %></h2>
    <div class="mb-4">
        <p><strong>Size:</strong> <%= file.sizeInKB %> KB</p>
        <p><strong>Uploaded:</strong> <%= file.uploadTime %></p>
    </div>
    <div class="flex justify-between">
        <a href="/files/<%= file.id %>/download" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
            Download
        </a>
        <form action="/files/<%= file.id %>?_method=DELETE" method="POST">
            <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Delete
            </button>
        </form>
    </div>
</div>